<section id="contact" class="py-20 bg-nature-50 dark:bg-earth-800">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-12 text-earth-900 dark:text-nature-50">Get in Touch</h2>
      
      <form class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-earth-700 dark:text-earth-200 mb-1">
            Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 border border-earth-200 dark:border-earth-600 rounded-lg 
                   focus:ring-2 focus:ring-nature-500 focus:border-nature-500 
                   dark:bg-earth-700 dark:text-earth-100 dark:focus:ring-nature-600"
          />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-earth-700 dark:text-earth-200 mb-1">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 border border-earth-200 dark:border-earth-600 rounded-lg 
                   focus:ring-2 focus:ring-nature-500 focus:border-nature-500 
                   dark:bg-earth-700 dark:text-earth-100 dark:focus:ring-nature-600"
          />
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-earth-700 dark:text-earth-200 mb-1">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full px-4 py-2 border border-earth-200 dark:border-earth-600 rounded-lg 
                   focus:ring-2 focus:ring-nature-500 focus:border-nature-500 
                   dark:bg-earth-700 dark:text-earth-100 dark:focus:ring-nature-600"
          ></textarea>
        </div>
        
        <button
          type="submit"
          class="w-full bg-nature-600 text-white py-3 px-6 rounded-lg font-semibold 
                 hover:bg-nature-700 transition-colors focus:ring-2 focus:ring-offset-2 
                 focus:ring-nature-500 dark:focus:ring-offset-earth-800"
        >
          Send Message
        </button>
      </form>
    </div>
  </div>
</section>
